<Page x:Class="TCMigrator.Settings.TabbedSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TCMigrator.Settings"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TabbedSettings">

    <Grid>
        <TabControl HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Stretch" x:Name="SettingsDisplay" TabStripPlacement="Bottom">
            <TabItem Header="CSVSettings">
                <Frame x:Name="CSVSettings"></Frame>
            </TabItem>
            <TabItem Header="Database Settings">
                <Frame x:Name="DBSettings"></Frame>
            </TabItem>
            <TabItem Header="Import Settings">
                <Frame x:Name="ImportSettings"></Frame>
            </TabItem>
            <TabItem Header="Teamcenter Settings">
                <Frame x:Name="TCSettings"></Frame>
            </TabItem>
            <TabItem Header="Log Settings">
                <Frame x:Name="LogSettings"></Frame>
            </TabItem>
        </TabControl>

    </Grid>
</Page>
